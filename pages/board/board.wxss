.slide swiper {
  height: 400rpx;
}

.slide swiper image {
  width: 100%;
  height: 100%;
}

.slide swiper .item-title {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, .3);
  border-radius: 3px;
  padding: 10rpx;
  color: #fff;
}

.board {
  box-sizing: border-box;
  background-color: #ddd;
  outline: none;
  width: 100%;
  overflow: hidden;
}

.board-item {
  display: flex;
  flex-direction: column;
  cursor: pointer;
  font-size: 20rpx;
  padding: 20rpx;
  padding-bottom: 0;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.board-item:last-child{
  margin-bottom: 4rpx;
}

.board-item .title {
  display: flex;
  margin-bottom: 10rpx;
  font-size: 30rpx;
  width: 100%;
  padding-left: 40rpx;
}
.board-item .title::after {
  content: '';
  width: 20rpx;
  height: 40rpx;
  background-color: green;
  position: absolute;
  left: 20rpx;
}

.board-item .title text {
  flex: 1;
}

.board-item .title image {
  height: 20rpx;
  width: 20rpx;
}

.board-item .content {
  height: 300rpx;
}

.board-item .content .inner {
  display: flex;
  flex-direction: row;
  height: 300rpx;
  width: 900rpx;
}

.board-item .content .inner .movie-item {
  display: flex;
  flex-direction: column;
  width: 180rpx;
  margin: 10rpx;
}

.board-item .content .inner .movie-item image {
  width: 180rpx;
  height: 250rpx;
}

.board-item .content .inner .movie-item text {
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 10rpx;
}
